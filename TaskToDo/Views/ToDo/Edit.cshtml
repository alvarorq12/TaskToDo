@model TaskToDo.Models.TodoList

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit task</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="ID_USUARIO" />
            <input type="hidden" asp-for="CREATED" />
            <input type="hidden" asp-for="LAST_UPD" />

            <div class="form-group">
                <label asp-for="TASK" class="form-control-lg"></label>
                <textarea class="form-control" asp-for="TASK" ></textarea>
                
                <span asp-validation-for="TASK" class="text-danger"></span>
            </div>                    
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="COMPLETED" /> @Html.DisplayNameFor(model => model.COMPLETED)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
